
%table{border: 0, cellpadding: 2, cellspacing: 2}
 %tr
  %td{width: '1', class: 'leftmenu', valign: 'top'}
   %table{cellpadding: 0, cellspacing: 0, width: 200}
    %td{width: '100%', class: 'leftmenu'}
     %b{style: "font-size:120%;"}
      &#149;
      %a{href: "/ddir/c0t0.html"} All topics / All categories
     %br
     %br
     %b
      %span{style: "font-size:120%;"} Categories:
     %br
     -catid0 = 0
     -@cat_list.each do |row|
      -if catid0 != row['catid']
       &nbsp;
       %b
        &#149;
        %a{href: "/ddir/c#{row['catid']}t0.html"}
         =row['title']
       %br
       -catid0 = row['catid']
      -if row['title2']
       &nbsp; &nbsp; &#149;
       %a{href: "/ddir/c#{row['catid2']}t0.html"}= row['title2']
       %br
     %br
     %b
      %span{style: "font-size:120%;"} Topics:
     %br
     -@topic_map.each_pair do |k,v|
      &nbsp; &#149;
      %a{href: "/ddir/c0t#{k}.html"}= v
      %br
      
  %td{width: '99%', valign: 'top', class: 'body'}
   %center
    %h3 New resources:
   =render partial: 'dir/res_list', locals: {lst: @res_list}
   %center
    %h3 Last added events:
   =render partial: 'dir/res_list', locals: {lst: @evt_list}

-#%ul
 -@evt_list.each do |row|
  %li
   -#= row.inspect
   %b
    %a{target: '_blank', href: row['url']}= row['title']
   =(row['date'])
   %br
   -if row['isevent']=='t'
    %b
     =row['diapazon']
     /
     =row['place']
    %br
   != nl2br row['description']
   %p

-#render :file => 'ipacs/layout'


